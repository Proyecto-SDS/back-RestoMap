# ================================
# Entorno de la Aplicación
# ================================
ENV=development  # development o production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# Configuración de la Base de Datos (Desarrollo Local)
# ================================
# Para desarrollo local (sin Docker):
DB_USER=myuser
DB_PASSWORD=mypassword
DB_HOST=localhost  # Cambiar a 'db' si usas Docker Compose
DB_PORT=5432
DB_NAME=mydb

# ================================
# Configuración de PostgreSQL para Docker Compose (Opcional)
# Solo necesario si usas Docker Compose
# ================================
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydb

# ================================
# Seguridad
# ================================
# Clave secreta para JWT (¡CAMBIAR EN PRODUCCIÓN!)
JWT_SECRET_KEY=dev-secret-key-change-in-production-2025